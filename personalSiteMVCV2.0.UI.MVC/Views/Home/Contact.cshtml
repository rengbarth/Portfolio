@model personalSiteMVCV2._0.UI.MVC.Models.ContactViewModel

@{
    ViewBag.Title = "Contact";
}
<div id="colorlib-main">
    <div class="colorlib-contact">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <span class="heading-meta">Contact</span>
                    <h2 class="colorlib-heading animate-box" data-animate-effect="fadeInLeft">Get in Touch</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-5 col-md-push-6">
                    <div class="colorlib-feature colorlib-feature-sm animate-box" data-animate-effect="fadeInLeft">
                        <div class="colorlib-icon">
                            <i class="icon-globe-outline"></i>
                        </div>
                        <div class="colorlib-text">
                            <p><a href="mailto:raphael.engbarth@gmail.com" title="" class="email">raphael.engbarth@gmail.com</a></p>
                        </div>
                    </div>
                    <div class="colorlib-feature colorlib-feature-sm animate-box" data-animate-effect="fadeInLeft">
                        <div class="colorlib-icon">
                            <i class="icon-map"></i>
                        </div>
                        <div class="colorlib-text">
                            <p><a href="https://goo.gl/maps/hztgqmzDdp62" target="_blank">Warrensburg MO 64093</a></p>
                        </div>
                    </div>
                    <div class="colorlib-feature colorlib-feature-sm animate-box" data-animate-effect="fadeInLeft">
                        <div class="colorlib-icon">
                            <i class="icon-phone"></i>
                        </div>
                        <div class="colorlib-text">
                            <p><a href="tel://">(660)909-1641</a></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-7 col-md-pull-5">
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1 col-md-pull-1 animate-box" data-animate-effect="fadeInLeft">
                            <div class="contact-form">
                                <div class="status alert alert-success" style="display: none"></div>
                                @*<form action="">*@
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-group">
                                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Name" })
                                        @Html.ValidationMessageFor(x => x.Name)
                                    </div>
                                    <div class="form-group">
                                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email" })
                                        @Html.ValidationMessageFor(x => x.Email)
                                    </div>
                                    <div class="form-group">
                                        @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", placeholder = "Subject" })
                                        @Html.ValidationMessageFor(x => x.Subject)
                                    </div>
                                    <div class="form-group">
                                        @Html.TextAreaFor(x => x.Message, new { @class = "form-control", placeholder = "Message", rows = "8" })
                                        @Html.ValidationMessageFor(x => x.Message)
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" class="btn btn-primary btn-send-message" value="Send Message">
                                    </div>
                                }
                                @*</form>*@
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @*<div id="map"></div>*@
</div>
